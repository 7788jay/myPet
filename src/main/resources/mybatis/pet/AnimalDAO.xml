    <sql id="Base_Column_List">
        id,
        code,
        name,
        description,
        createTime
    </sql>
    <insert id="insert" parameterType="animal">
        INSERT INTO pet_animal (
		    code
		    ,name
		    ,description
		    ,createTime
        ) VALUES (
		    	#{code}
		    	,#{name}
		    	,#{description}
		    	,#{createTime}
        )
        <selectKey resultType="java.lang.Long" keyProperty="id">
        	SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>

    <insert id="insertMap" >
        INSERT INTO pet_animal (
		    code
		    ,name
		    ,description
		    ,createTime
        ) VALUES (
		    	#{map.code}
		    	,#{map.name}
		    	,#{map.description}
		    	,#{map.createTime}
        )
    </insert>
    
    <!-- 更新 -->
    <update id="update" parameterType="animal">
        UPDATE pet_animal
        <trim prefix="SET" suffixOverrides=",">
		    code=#{code},
		    name=#{name},
		    description=#{description},
		    createTime=#{createTime},
        </trim>
        WHERE
        id = #{id}
    </update>
	
	<update id="updateMap">
        UPDATE pet_animal
        <trim prefix="SET" suffixOverrides=",">
            <if test="map.code!=null">
                code = #{map.code},
            </if>
            <if test="map.name!=null">
                name = #{map.name},
            </if>
            <if test="map.description!=null">
                description = #{map.description},
            </if>
            <if test="map.createTime!=null">
                createTime = #{map.createTime},
            </if>
        </trim>
        WHERE
        id = #{map.id}
    </update>

    <update id="updateByCondition">
        UPDATE pet_animal
        <trim prefix="SET" suffixOverrides=",">
            <if test="update.code!=null">
                code = #{update.code},
            </if>
            <if test="update.name!=null">
                name = #{update.name},
            </if>
            <if test="update.description!=null">
                description = #{update.description},
            </if>
            <if test="update.createTime!=null">
                createTime = #{update.createTime},
            </if>
        </trim>

        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="condition.code!=null">
                AND code = #{condition.code}
            </if>
            <if test="condition.name!=null">
                AND name = #{condition.name}
            </if>
            <if test="condition.description!=null">
                AND description = #{condition.description}
            </if>
            <if test="condition.createTime!=null">
                AND createTime = #{condition.createTime}
            </if>
        </trim>
    </update>   
    
    <!-- 按Id删除 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM pet_animal
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            AND id = #{id}
        </trim>
    </delete>

    <!--根据list(ids)删除对象-->
    <delete id="deleteByIds">
        DELETE FROM pet_animal
        WHERE id in
        <foreach collection="list" item="id" open="(" separator="," close=")">#{id}</foreach>
    </delete>

    <delete id="deleteByCondition" parameterType="java.util.Map">
        DELETE FROM pet_animal
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="id!=null">
                AND id = #{id}
            </if>
            <if test="code!=null">
                AND code = #{code}
            </if>
            <if test="name!=null">
                AND name = #{name}
            </if>
            <if test="description!=null">
                AND description = #{description}
            </if>
            <if test="createTime!=null">
                AND createTime = #{createTime}
            </if>
        </trim>
    </delete>

    <delete id="deleteByProperty" parameterType="java.util.Map">
        DELETE FROM pet_animal WHERE
        ${property} = #{value}
    </delete>
    
    <!--查询相关 -->
    <select id="fetch" parameterType="java.lang.Integer" resultType="Animal">
        SELECT
        <include refid="Base_Column_List" />
        FROM pet_animal
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            AND id = #{id}
        </trim>
        <if test="orderBy!=null">
        ORDER BY ${orderBy} ${sortBy}
        </if>
    </select>

    <select id="findOne" parameterType="java.util.Map" resultType="Animal">
        SELECT
        <include refid="Base_Column_List" />
        FROM pet_animal WHERE
        ${property} = #{value}
        LIMIT 0,1
    </select>

    <select id="findList" parameterType="java.util.Map" resultType="Animal">
        SELECT
